    <div class="box collapsed-box">
      <div class="box-header with-border">
        <h3 class="box-title">Creadas</h3>
        <div class="box-tools pull-right">
          <button type="button" class="btn btn-box-tool" data-widget="collapse" data-toggle="tooltip" title="" data-original-title="Collapse">
            <i class="fa fa-plus"></i></button>
        </div>
      </div>
      <div class="box-body">
        <table class="table table-hover search-table">
          <thead>
          <tr>
            <th>Proveedor</th>
            <th>SKU</th>
            <th>Cantidad</th>
            <th>Estado</th>
            <th>Documentos Asociados</th>
          </tr>
          </thead>
          <tbody>
          <% @oc_enviadas.where(:estado => "creada").each do |oc| %>
              <tr>
                <td><%= oc.proveedor %></td>
                <td><%= oc.sku %></td>
                <td><%= oc.cantidad %></td>
                <td><%= oc.estado %></td>
                <td>
                  <% if oc.facturaRealizadaDB == true %>
                      <%= link_to raw('<i class="fa fa-pencil-square-o"></i>'), "/",
                                  method: :put, class: 'btn btn-xs btn-warning',
                                  data: { toggle: 'tooltip', placement: 'top' }, title: 'Ver Factura' %>
                  <% end %>
                </td>
              </tr>
          <% end %>
          </tbody>
        </table>
      </div><!-- /.box-body -->
      <div class="box-footer">
