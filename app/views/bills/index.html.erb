<% content_for :header do %>
<%end%>

<% content_for :content do %>
    <!-- Default box -->
    <div class="box">
      <div class="box-header with-border">
        <h3 class="box-title">Boletas (<%= @bills.count %>)</h3>
      </div>
      <div class="box-body">
        <table class="table table-hover search-table">
          <thead>
          <tr>
            <th>ID</th>
            <th>SKU</th>
            <th>Valor Total</th>
            <th>Estado Pago</th>
            <th>Fecha Creaci√≥n</th>
            <th align="center">Ver Boleta</th>
          </tr>
          </thead>
          <tbody>
          <% @bills.each do |bill| %>
              <tr>
                <td><%= bill._id %></td>
                <td><%= bill.sku %></td>
                <td>$ <%= bill.valorTotal %></td>
                <td><%= bill.estadoPago %></td>
                <td><%= bill.fechaCreacion.strftime("%d-%m-%Y %H:%M:%S") %></td>
                <td align="center">
                  <%= link_to raw('<i class="fa fa-pencil-square-o fa-fw" ></i>'), "/boletas/"+ bill._id.to_s,
                              method: :get, class: 'btn btn-xs btn-success',
                              data: { toggle: 'tooltip', placement: 'top' }, title: 'Ver' %>
                </td>
                <td></td>
              </tr>
          <% end %>
          </tbody>
        </table>
      </div><!-- /.box-body -->
      <div class="box-footer">
      </div><!-- /.box-footer-->
    </div><!-- /.box -->
<% end %>