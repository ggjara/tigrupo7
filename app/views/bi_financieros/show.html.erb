<% content_for :header do %>
    <h1>Business Intelligence: Financieros</h1>
<%end%>

<% content_for :content do %>
    <div class="box">
      <div class="box-header with-border">
        <h3 class="box-title">TRANSACCIONES</h3>
      </div>
      <div class="box-body">
        <table class="table">
          <thead>
          <tr>
            <th>Hora</th>
            <th>Cargo</th>
            <th>Abono</th>
            <th>Cuenta involucrada</th>
          </tr>
          </thead>
          <tbody>
            <tr>
              <% Trx.where(created_at: params[:id]).order(created_at: :desc).each do |trx|%>
                <td><%= trx.created_at.strftime("%H:%M") %></td>
                <% if trx.cuentaOrigen == "571262c3a980ba030058ab60" %>
                  <td><%= trx.monto %></td>
                  <td></td>
                  <td> <%= trx.cuentaDestino %></td>
                <% else %>
                  <td></td>
                  <td><%= trx.monto %></td>
                  <td> <%= trx.cuentaOrigen %></td>
                <% end %>
              t<% end %>
            </tr>
          </tbody>
        </table>
      </div>
      <div class="box-footer">
      </div><!-- /.box-footer-->
    </div>
<% end %>